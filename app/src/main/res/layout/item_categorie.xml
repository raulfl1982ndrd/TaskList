<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:gravity="center_vertical">

    <TextView
        android:id="@+id/nameTextViewCategorie"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:textSize="18sp"
        tools:text="TextView"/>
    <ImageButton
        android:id="@+id/editButtonCategorie"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/ic_edit_24"
        android:padding="16dp"
        android:layout_marginEnd="16dp"
        android:contentDescription="@string/edit_category_title" />
    <ImageButton
        android:id="@+id/deleteButtonCategorie"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/ic_delete_forever_24"
        android:padding="16dp"
        android:layout_marginEnd="16dp"
        android:contentDescription="@string/delete_task_title" />
</LinearLayout>